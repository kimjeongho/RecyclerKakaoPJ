<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/image_receive" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_receive"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_receive"
        android:layout_toEndOf="@+id/image_receive"
        android:background="@drawable/receive"
        android:layout_marginRight="@dimen/kakao_margin"
        android:paddingLeft="7dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp" />
</RelativeLayout>